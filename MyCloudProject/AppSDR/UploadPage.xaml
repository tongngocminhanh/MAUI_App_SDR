<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSDR.UploadPage"
             Title="UploadPage">

    <StackLayout Padding="10">
        <Label Text="Configure Storage" FontAttributes="Bold"/>

        <Label Text="Select files to upload:" FontAttributes="Bold"/>
        <Button Text="Select Files" Clicked="OnSelectFilesClicked"/>
        <Button Text="Upload Files" Clicked="OnUploadFilesClicked"/>

        <!-- Add x:Name here -->
        <Label Text="Status: Idle" x:Name="statusLabel"/>
    </StackLayout>
</ContentPage>
