<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestCloudProject.ViewModel"
             x:Class="TestCloudProject.MainPage"
             Title="Blob Storage Example">

    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Configure Storage" FontAttributes="Bold"/>

        <Entry Placeholder="Connection String" Text="{Binding ConnectionString}" />
        <Entry Placeholder="Upload Blob Storage Name" Text="{Binding UploadBlobStorageName}" />
        <Entry Placeholder="Download Blob Storage Name" Text="{Binding DownloadBlobStorageName}" />

        <Button Text="Select and Upload File" Command="{Binding SelectAndUploadFileCommand}" />
        <Button Text="Download Files" Command="{Binding DownloadFilesCommand}" />

        <Label Text="{Binding StatusMessage}" />
    </StackLayout>
</ContentPage>