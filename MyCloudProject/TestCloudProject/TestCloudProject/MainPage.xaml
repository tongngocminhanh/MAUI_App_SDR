<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestCloudProject.Viewmodel"
             x:Class="TestCloudProject.MainPage">

    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Text="Load Containers" Command="{Binding LoadContainersCommand}" />
        <ListView ItemsSource="{Binding ContainerNames}" SelectedItem="{Binding SelectedContainer}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Load Blobs" Command="{Binding LoadBlobsCommand}" />
        <ListView ItemsSource="{Binding BlobNames}" SelectedItem="{Binding SelectedBlob}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>