<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.UploadPage">

    <StackLayout Padding="10">
        <Label Text="Configure Storage" FontAttributes="Bold"/>
        <Entry x:Name="connectionStringEntry" Placeholder="Azure Storage Connection String"/>
        <Entry x:Name="uploadContainerNameEntry" Placeholder="Upload Container Name"/>

        <Label Text="Select files to upload:" FontAttributes="Bold"/>
        <Button Text="Select Files" Clicked="OnSelectFilesClicked"/>
        <Button Text="Upload Files" Clicked="OnUploadFilesClicked"/>

        <Label x:Name="statusLabel" Text="Status: Idle"/>
    </StackLayout>
</ContentPage>
