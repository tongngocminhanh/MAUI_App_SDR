<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSDR.TextEditorPage"
             Title="TextEditorPage">
    <StackLayout>
        <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Editor x:Name="textEditor" Placeholder="Enter your numbers"
                    AutoSize="TextChanges"
                    Keyboard="Numeric"
                    Grid.Row="0"
                    FontSize="15"
                    />

            <Button Text="SAVE" Clicked="OnSaveClicked" Grid.Row="1" />
            

        </Grid>
    </ScrollView>
    <Button Text="BACK TO MAINPAGE" Clicked="OnBackToMainPageClicked" Grid.Row="2" />
    </StackLayout>
</ContentPage>
